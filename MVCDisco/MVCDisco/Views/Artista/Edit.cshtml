@model MVCDisco.Models.Artista

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("NavMenu_Partial")
  <div id="contenedor_index">

    <div class="contenedor_izquierdo_cancion">
         <img class="cualquiera" src="@Url.Content("~/Content/imagen/hombre.jpg")" alt="hombre_con_computadora" width="310" height="559" />
    </div>
   

    <div class="contenedor_derecho_cancion">

                <h2>Editar Artista</h2>

                @using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form" })) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                  

                        <div class="editor-label">
                            @Html.LabelFor(model => model.IdArtista)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.IdArtista)
                            @Html.ValidationMessageFor(model => model.IdArtista)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.NombreCompleto)
                        </div>
                        <div class="editor-field">
                             @Html.TextBox("NombreCompleto", null, new { @class = "form-control",placeholder="Ingrese Nombre"})
                            @Html.ValidationMessageFor(model => model.NombreCompleto)
                        </div>

                        <p>
                            <input type="submit"  class="btn btn-default" value="Save" />
                        </p>
                  
                }

             </div>
    </div>


